{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"ignorePatterns": ["/ecosystem.config.js", "build/**/*.js"],
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"eqeqeq": "error"
	}
}
